<h1><%= @cocktail.name %></h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<p><%= @cocktail.created_at %></p>

<%= image_tag @cocktail.picture.url(:medium) %>

 <h3>Ingredients:</h3>

<% @cocktail.doses.each do |dose| %>
<ul>
<li><%= dose.description + "of " %> <%= dose.ingredient.name %> <%= link_to 'Delete dose', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }%></li>
</ul>

<% end %>



<p><%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %></p>

